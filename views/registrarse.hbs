      <div class="loging-container">

        {{>showMessages messages}}

        <form method="post" action="/registrarse" class="form-register">
          <h4>REGÍSTRATE</h4>
          <input class="controls" type="text" id="inputNombre" name="nombre" placeholder="Nombre Completo"
