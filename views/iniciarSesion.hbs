{{!-- Formulario de Inicio de Sesion --}}

<div class="container text-center d-flex justify-content-center">
    <form method="post" action="/iniciar-sesion" class="form form-signin align-middle">
      <img class="mb-4" src="https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72"> {{!-- cambiar URL del logo en src --}}
      <h1 class="h3 mb-3 font-weight-normal">Iniciar sesión</h1>
      <label for="email" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required="">
      <label for="password" class="sr-only">Password</label>
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required="">
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div>
      <button class=" btn btn-lg btn-primary btn-block " type="submit">Iniciar sesión</button>
      <br>
      <br>
      <a href="/olvide-password">¿OLVIDASTE LA CONTRASEÑA?</a>

      <p class="mt-5 mb-3 text-muted">E-clothes© 2020</p>


    </form>
</div>
