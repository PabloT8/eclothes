<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1>Mis Compras</h1>
        <hr>
        <h2>Mis Ordenes</h2>
        {{#each ordenes}}
            <div class="panel panel-default">
                <div class="panel-body">
                    <ul class="list-group">
                        {{#each this.items}}
                            <li class="list-group-item">
                                <span class="badge">${{this.precio}}</span>
                                {{this.item.nombre}} | {{this.item.nombre}} Unidades
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="panel-footer">
                    <strong>Precio Total: ${{this.carrito.precioTotal}}</strong>
                </div>
            </div>
        {{/each}}
    </div>
</div>